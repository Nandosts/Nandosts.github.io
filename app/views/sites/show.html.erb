<section class="site-show-section">
  <h2 class="site-name">
    <%= @project.name %>
  </h2>

  <div class="site-header-container">
    <%= link_to site_path(@project.previous.id), class: "nav-button prev", title: t(:previous_project) do %>
      &#10094;
    <% end %>

    <div class="site-img-wrapper">
      <% if @project.image_path.present? %>
        <%= image_tag @project.image_path, alt: "Imagem do site", class: "site-img" %>
      <% end %>
    </div>

    <%= link_to site_path(@project.next.id), class: "nav-button next", title: t(:next_project) do %>
      &#10095;
    <% end %>
  </div>
  
  <div class="site-details">
    <div class="site-texts">
      <p class="category-title"><%= t(:site_technologies) %></p>
      <ul>
        <% @project.technologies.each do |tech| %>
          <li><%= tech %></li>
        <% end %>
      </ul>

      <div class="about-site-text">
        <p class="category-title"><%= t(:site_about) %></p>
        <span class="site-description"><%= t(@project.description_key) %></span>
      </div>
    </div>
    
    <% if @project.url.present? %>
      <a class="site-button-link" href="<%= @project.url %>" target="_blank" rel="noreferrer">
        <button class="szot-button"><%= t(:site_button) %></button>
      </a>
    <% end %>
  </div>
</section>